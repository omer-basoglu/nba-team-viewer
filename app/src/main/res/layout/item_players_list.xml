<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="player"
                type="com.obasoglu.nbateamviewer.data.Player"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_firstName"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@{player.firstName}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:textSize="16sp"
                tools:text="Firstname"/>

        <TextView
                android:id="@+id/tv_lastName"
                app:layout_constraintLeft_toRightOf="@id/tv_firstName"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@{player.lastName}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:textSize="16sp"
                tools:text="Lastname"/>

        <TextView
                android:id="@+id/tv_position"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_firstName"
                android:text="@{player.position}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:textSize="16sp"
                tools:text="OS"/>

        <TextView
                android:id="@+id/tv_number"
                app:layout_constraintLeft_toRightOf="@id/tv_position"
                app:layout_constraintTop_toBottomOf="@id/tv_firstName"
                android:text="@{String.valueOf(player.number)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:textSize="16sp"
                tools:text="22"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>